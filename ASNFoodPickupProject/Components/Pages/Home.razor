@page "/"
@rendermode InteractiveServer

<PageTitle>Login Page</PageTitle>

<head>
    <style>

        body {
            margin: 0;
            margin-top: 0;
            font-family: "Didact Gothic", sans-serif;
        }

        .didact-gothic-regular {
            font-family: "Didact Gothic", sans-serif;
            font-weight: 400;
            font-style: normal;
        }

        .btn {
            border-radius: 2em;
        }

        .btn-primary {
            border: none;
            background-color: black;
        }

            .btn-primary:hover {
                background-color: dimgray;
            }

        form {
            border: none;
            border-radius: 2em;
            box-shadow: 0 0 200px #c4c4c4;
            padding: 5em;
            padding-bottom: 2em;
        }

        a {
            text-decoration: underline;
        }

            a:hover {
                text-shadow: 3px 3px 5px gray;
            }

        /* Custom style for MudTextField border color and Label color */
        .custom-mudtextfield .mud-input {
            --mud-palette-primary: #000000;
        }

        .custom-mudtextfield {
            --mud-palette-primary: #000000;
        }

        .custom-mudtextfield {
            --mud-default-borderradius: 2em;
        }
    </style>
</head>




<div class="container d-flex flex-column justify-content-center align-items-center min-vh-100">
    <form class="didact-gothic-regular text-center">
        <span class="col-12 col-md-9 text-black fs-3">Create a new <span class="text-warning fw-bold">Food</span> <span class="fw-bold">Store</span> account.</span>
        <div class="col">
            <br />
            <br />
            <span class="col-12 col-md-9 text-black fs-5">Type your email address / phone number.</span>
            <div class="col-12 fs-5 ">
                <MudTextField @bind-Value="UsernameOrPhoneNumber" Label="Email Address or Phone Number" Variant="Variant.Outlined" Class="custom-mudtextfield"></MudTextField>
            </div>
            <br />
            <br />
            <span class="col-12 col-md-9 text-black fs-5">Create a password for your account.</span>
            <br />
            <div class="col-12 fs-5 ">
                <MudTextField @bind-Value="Password1" Label="Type your password" Variant="Variant.Outlined" Class="custom-mudtextfield" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ButtonTestclick" AdornmentAriaLabel="Show Password" />
            </div>
            <br />
            <div class="col-12 fs-5 ">
                <MudTextField @bind-Value="Password2" Label="Re-Type your password" Variant="Variant.Outlined" Class="custom-mudtextfield" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ButtonTestclick" AdornmentAriaLabel="Show Password" />
            </div>
            <br />
        </div>
        <button type="submit" class="btn btn-primary col-9 fs-5 " id="SignupContinueButton">Continue >>></button>
        <br />
        <br />
        <br />
        <span class="fs-5">--------------- or ---------------</span>
        <br />
        <br />
        <br />
        <button type="button" class="btn btn-primary col-9 fs-5 " id="SignupWithGoogleButton"><img src="https://www.transparentpng.com/thumb/google-logo/google-logo-png-icon-free-download-SUF63j.png" width="30px">&nbsp; &nbsp; Sign up with Google</button>
        <br />
        <br />
        <br />
        <br />
        <a href=""><h6>Alread have an Account ?</h6></a>
    </form>
    </div>
    <div class="container d-flex flex-column justify-content-center align-items-center min-vh-100">
        <form class="didact-gothic-regular text-center">
            <div class="col">
                <span class="col-12 col-md-9 text-black fs-3">Log in to your <span class="text-warning fw-bold">Food</span> <span class="fw-bold">Store</span> account.</span>
                <div class="col-12 fs-5 ">
                    <br />
                    <MudTextField @bind-Value="UsernameOrPhoneNumber" Label="Email Address or Phone Number" Variant="Variant.Outlined" Class="custom-mudtextfield"></MudTextField>
                </div>
                <br />
                <div class="col-12 fs-5 ">
                    <MudTextField @bind-Value="Password" Label="Password" Variant="Variant.Outlined" Class="custom-mudtextfield" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ButtonTestclick" AdornmentAriaLabel="Show Password" />
                </div>
                <br />
            </div>
            <button type="submit" class="btn btn-primary col-9 fs-5 " id="LoginButton">Log in</button>
            <br />
            <br />
            <br />
            <span class="fs-5">--------------- or ---------------</span>
            <br />
            <br />
            <br />
            <button type="button" class="btn btn-primary col-9 fs-5 " id="LoginWithGoogleButton"><img src="https://www.transparentpng.com/thumb/google-logo/google-logo-png-icon-free-download-SUF63j.png" width="30px">&nbsp; &nbsp; Log in with Google</button>
            <br />
            <br />
            <br />
            <br />
            <div class="d-flex justify-content-between align-items-center">
                <a href=""><h6>Forgot Password ?</h6></a>
                <a href=""><h6>Create an Account</h6></a>
            </div>
        </form>
    </div>

    <div class="container d-flex flex-column justify-content-center align-items-center min-vh-100">
        <form class="didact-gothic-regular text-center">
            <span class="col-12 col-md-9 text-black fs-3">Registering  your <span class="text-warning fw-bold">Food</span> <span class="fw-bold">Store</span> account.</span>
            <div class="col">
                <br />
                <br />
                <span class="col-12 col-md-9 text-black fs-5 ">Enter the one-time password (OTP) code you received by SMS or email.</span>
                <div class="col-12 fs-5">
                    <MudTextField @bind-Value="OTP" Label="OTP" Variant="Variant.Outlined" Class="custom-mudtextfield"></MudTextField>
                </div>
                <br />
            </div>
            <button type="submit" class="btn btn-primary col-9 fs-5 " id="ConfirmRegisterButton">Confirm</button>
            <br />
            <br />
            <button type="button" class="btn btn-outline-secondary col-5 fs-6 " id="CancelButton">Cancel</button>
        </form>
    </div>

<div class="container d-flex flex-column justify-content-center align-items-center min-vh-100">
    <form class="didact-gothic-regular text-center">
        <span class="col-12 col-md-9 text-black fs-3">Reset your <span class="text-warning fw-bold">Food</span> <span class="fw-bold">Store</span> account password.</span>
        <div class="col">
            <br />
            <br />
            <span class="col-12 col-md-9 text-black fs-5">Type your email address / phone number.</span>
            <div class="col-12 fs-5 ">
                <MudTextField @bind-Value="UsernameOrPhoneNumber" Label="Email Address or Phone Number" Variant="Variant.Outlined" Class="custom-mudtextfield"></MudTextField>
            </div>
            <br />
        </div>
        <button type="submit" class="btn btn-primary col-9 fs-5 " id="LoginButton">Reset Password</button>
        <br />
        <br />
        <button type="button" class="btn btn-outline-secondary col-5 fs-6 " id="CancelButton">Cancel</button>
    </form>
</div>

<div class="container d-flex flex-column justify-content-center align-items-center min-vh-100">
    <form class="didact-gothic-regular text-center">
        <span class="col-12 col-md-9 text-black fs-3">Please confirm the process for resetting your <span class="text-warning fw-bold">Food</span> <span class="fw-bold">Store</span> account password.</span>
        <div class="col">
            <br />
            <br />
            <span class="col-12 col-md-9 text-black fs-5 ">Enter the one-time password (OTP) code you received by SMS or email.</span>
            <div class="col-12 fs-5">
                <MudTextField @bind-Value="OTP" Label="OTP" Variant="Variant.Outlined" Class="custom-mudtextfield"></MudTextField>
            </div>
            <br />
        </div>
        <button type="submit" class="btn btn-primary col-9 fs-5 " id="ConfirmPasswordResetButton">Confirm</button>
        <br />
        <br />
        <button type="button" class="btn btn-outline-secondary col-5 fs-6 " id="CancelButton">Cancel</button>
    </form>
</div>

@code {
    public string? UsernameOrPhoneNumber { get; set; }
    public string? Password { get; set; }
    public string? Password1 { get; set; }
    public string? Password2 { get; set; }
    public string? OTP { get; set; }

    bool isShow;
    InputType PasswordInput = InputType.Password;
    string PasswordInputIcon = Icons.Material.Filled.VisibilityOff;

    void ButtonTestclick()
    {
        @if (isShow)
        {
            isShow = false;
            PasswordInputIcon = Icons.Material.Filled.VisibilityOff;
            PasswordInput = InputType.Password;
        }
        else
        {
            isShow = true;
            PasswordInputIcon = Icons.Material.Filled.Visibility;
            PasswordInput = InputType.Text;
        }
    }
}
