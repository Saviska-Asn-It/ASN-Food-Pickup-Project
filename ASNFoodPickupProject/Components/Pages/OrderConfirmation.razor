@page "/aa"

<PageTitle>Order Confirmation</PageTitle>

<head>
    <style>
        .btn {
            border-radius: 2em;
        }

        .btn-primary {
            border: none;
            background-color: black;
        }

            .btn-primary:hover {
                background-color: dimgray;
            }

        .myEditBtn{
            background-color:white;
        }
        .myEditBtn:hover {
            background-color: lightgray;
        }

        .card {
            border: none;
            border-radius: 2em;
            box-shadow: 0 0 125px #bfbfbf;
        }

        .card-column {
            display: flex;
            justify-content: center;
            height:fit-content;
        }

